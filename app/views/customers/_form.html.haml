= form_for @customer do |f|
  -if @customer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@customer.errors.count, "error")} prohibited this customer from being saved:"
      %ul
        - @customer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :field1
    = f.text_field :field1
  .field
    = f.label :field2
    = f.text_field :field2
  .field
    = f.label :field3
    = f.text_field :field3
  .actions
    = f.submit 'Save'
